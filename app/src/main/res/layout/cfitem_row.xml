<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/itempic"
    />

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                    android:orientation="vertical">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/cfitem_name"
                  android:text="food_name"
                  android:textSize="20sp"
                  android:layout_marginLeft="15dp"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/cfitem_price"
                  android:text="food_price"
                  android:layout_marginTop="15dp"
                  android:textSize="20sp"
                  android:layout_marginLeft="15dp"
        />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_item_pic"
                android:src="@drawable/ic_add_shopping_cart_black_24dp"
                android:layout_margin="15dp"

        />

    </LinearLayout>
</LinearLayout>